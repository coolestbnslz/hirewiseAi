# Server Configuration
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hirewise

# AWS Bedrock Configuration (using Converse API with Bearer token)
AWS_REGION=us-east-1
AWS_BEARER_TOKEN_BEDROCK=your_bearer_token

# Bedrock Model IDs (using Converse API format)
BEDROCK_MODEL_ID=us.anthropic.claude-3-5-haiku-20241022-v1:0
BEDROCK_MODEL_CRITICAL=us.anthropic.claude-3-opus-20240229-v1:0
BEDROCK_MODEL_STANDARD=us.anthropic.claude-3-5-sonnet-20241022-v1:0
BEDROCK_MODEL_FAST=us.anthropic.claude-3-5-haiku-20241022-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# LLM Provider Selection (bedrock or openai)
LLM_PROVIDER=bedrock

# OpenAI Configuration (if using OpenAI instead of Bedrock)
OPENAI_API_KEY=your_openai_api_key

# Model IDs (works for both Bedrock and OpenAI)
# For OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# For Bedrock: us.anthropic.claude-3-5-haiku-20241022-v1:0, etc.
LLM_MODEL_ID=gpt-4o
LLM_MODEL_CRITICAL=gpt-4o
LLM_MODEL_STANDARD=gpt-4o
LLM_MODEL_FAST=gpt-4o-mini

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=HireWise Team
