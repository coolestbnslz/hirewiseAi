# Server Configuration
PORT=3000

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/hirewise

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key

# Bedrock Model IDs
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_CRITICAL=anthropic.claude-3-opus-20240229-v1:0
BEDROCK_MODEL_STANDARD=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_MODEL_FAST=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_EMBEDDING_MODEL_ID=amazon.titan-embed-text-v1

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=your_email@gmail.com
SMTP_FROM_NAME=HireWise Team

# LLM Provider Selection (bedrock or openai)
LLM_PROVIDER=bedrock

# OpenAI Configuration (if using OpenAI instead of Bedrock)
OPENAI_API_KEY=your_openai_api_key

# Model IDs (works for both Bedrock and OpenAI)
# For OpenAI: gpt-4o, gpt-4o-mini, gpt-4-turbo, gpt-3.5-turbo
# For Bedrock: anthropic.claude-3-opus-20240229-v1:0, etc.
LLM_MODEL_ID=gpt-4o
LLM_MODEL_CRITICAL=gpt-4o
LLM_MODEL_STANDARD=gpt-4o
LLM_MODEL_FAST=gpt-4o-mini
